<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
    <%- include("css.ejs") %>
</head>
<body>
<%- include("header.ejs") %>
<%- include("nav.ejs") %>

<section class="section main">
    <div class="container">
        <div class="row">
            <%- include("aside.ejs") %>
            <article class="content col-md-8">
                <h1>Số người đã truy cập website: <%= count %></h1>
                <% if(count > 15){ %>
                   <% for(var i=0;i<10;i++){ %>
                        <h2>Đông người quá...</h2>
                    <% } %>
                <% } %>
                <h2>Danh sách sinh viên:</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Mark</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i<studentList.length;i++){ %>
                            <tr>
                                <td><%= i+1 %></td>
                                <td><%= studentList[i].name %></td>
                                <td><%= studentList[i].age %></td>
                                <td><%= studentList[i].mark %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </article>
        </div>
    </div>
</section>
<%- include("footer.ejs") %>
</body>
</html>